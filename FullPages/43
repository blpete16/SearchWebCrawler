function clickclear(thisfield, defaulttext) {
	Field = thisfield;
	if (Field.value == defaulttext) {
		Field.value = "";
	}
}
function clickrecall(thisfield, defaulttext) {
Field = thisfield;
	if (Field.value == "") {
		Field.value = defaulttext;
	}
}

